{
    "name": "gitpatch",
    "displayName": "Git Patch",
    "description": "Creates supplied diff output (i.e. 'a patch') and applies it to files. ",
    "version": "0.2.1",
    "publisher": "paragdiwan",
    "engines": {
        "vscode": "^1.96.0"
    },
    "author": {
        "name": "Parag Diwan"
    },        
    "categories": [
        "Other"
    ],
    "galleryBanner": {
        "color": "#f0efe7",
        "theme": "light"
    },
    "icon": "images/git_icon.png",
    "activationEvents": [
        "onCommand:extension.gitCreatePatchFromStaged",
        "onCommand:extension.gitCreatePatchFromUnstaged",
        "onCommand:extension.gitApplyPatch",
        "onCommand:extension.gitCopyPatchToClipboardFromStaged",
        "onCommand:extension.gitCopyPatchToClipboardFromUnstaged",
        "onCommand:extension.gitApplyPatchFromClipboard"
    ],
    "keywords": [
        "git",
        "patch",
        "apply",
        "git patch",
        "git diff",
        "diff"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/paragdiwan/vscode-git-patch"
    },
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.gitCreatePatchFromStaged",
                "title": "Git: Creates a patch from staged files"
            },
            {
                "command": "extension.gitCreatePatchFromUnstaged",
                "title": "Git: Creates a patch from unstaged files"
            },
            {
                "command": "extension.gitApplyPatch",
                "title": "Git: Apply a patch from existing patch file"
            },
            {
                "command": "extension.gitCopyPatchToClipboardFromStaged",
                "title": "Git: Copy patch from staged files to clipboard"
            },
            {
                "command": "extension.gitCopyPatchToClipboardFromUnstaged",
                "title": "Git: Copy patch from unstaged files to clipboard"
            },
            {
                "command": "extension.gitApplyPatchFromClipboard",
                "title": "Git: Apply patch from clipboard"
            }
        ],
        "menus": {
            "scm/title": [
                {
                    "command": "extension.gitCreatePatchFromStaged",
                    "when": "scmProvider == git",
                    "group": "inline"
                },
                {
                    "command": "extension.gitCreatePatchFromUnstaged",
                    "when": "scmProvider == git",
                    "group": "inline"
                },
                {
                    "command": "extension.gitApplyPatch",
                    "when": "scmProvider == git",
                    "group": "inline"
                },
                {
                    "command": "extension.gitCopyPatchToClipboardFromStaged",
                    "when": "scmProvider == git",
                    "group": "inline"
                },
                {
                    "command": "extension.gitCopyPatchToClipboardFromUnstaged",
                    "when": "scmProvider == git",
                    "group": "inline"
                },
                {
                    "command": "extension.gitApplyPatchFromClipboard",
                    "when": "scmProvider == git",
                    "group": "inline"
                }
            ],
            "explorer/context": [
                {
                    "command": "extension.gitCreatePatchFromStaged",
                    "group": "MyGroup@1"
                },
                {
                    "command": "extension.gitCreatePatchFromUnstaged",
                    "group": "MyGroup@1"
                },
                {
                    "command": "extension.gitApplyPatch",
                    "group": "MyGroup@1"
                },
                {
                    "command": "extension.gitCopyPatchToClipboardFromStaged",
                    "group": "MyGroup@1"
                },
                {
                    "command": "extension.gitCopyPatchToClipboardFromUnstaged",
                    "group": "MyGroup@1"
                },
                {
                    "command": "extension.gitApplyPatchFromClipboard",
                    "group": "MyGroup@1"
                }
            ]
        }
    },
   
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/index.js",
        "package": "npx @vscode/vsce package"
    },
    "devDependencies": {
        "typescript": "^5.9.3",
        "@types/vscode": "^1.96.0",
        "@vscode/test-electron": "^2.4.1",
        "mocha": "^11.7.5",
        "@types/node": "^25.0.3",
        "@types/mocha": "^10.0.10",
        "@vscode/vsce": "^3.2.1"
    }
}
